<Page x:ConnectionId='1'
    x:Class="UWP_VendaEntrades.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_VendaEntrades"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <Grid>
        <NavigationView x:ConnectionId='2' 
                                                            
                    IsSettingsVisible="False"
                    x:Name="navMenu">
            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='3' Icon="Shop" Content="Ventes" x:Name="nviEntrades">
                </NavigationViewItem>
                <NavigationViewItemSeparator></NavigationViewItemSeparator>
                <NavigationViewItem x:ConnectionId='4' Icon="People" Content="TipusPassis" x:Name="nviPassis">
                </NavigationViewItem>

            </NavigationView.MenuItems>
            <NavigationView.Header>
                <Border>
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF4458C7"/>
                            <GradientStop Color="#FF3857F9" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock x:ConnectionId='5' x:Name="tbkTitol" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Foreground="White"></TextBlock>
                </Border>
            </NavigationView.Header>
            <ScrollViewer>
                <Frame x:ConnectionId='6' x:Name="frmPrincipal"></Frame>
            </ScrollViewer>
        </NavigationView>
    </Grid>
</Page>

