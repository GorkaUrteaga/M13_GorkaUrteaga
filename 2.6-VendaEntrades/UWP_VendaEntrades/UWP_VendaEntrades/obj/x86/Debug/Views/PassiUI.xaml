<UserControl x:ConnectionId='1'
    x:Class="UWP_VendaEntrades.Views.PassiUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_VendaEntrades.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
                               >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="10">
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="0,0,0,30">
                <TextBlock Text="Tipus Passi:" Margin="0,0,10,0"/>
                <ComboBox x:ConnectionId='7' x:Name="cboTipusPassi" Width="100"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock Text="Data:" Margin="0,0,10,0"/>
                <DatePicker x:ConnectionId='6' x:Name="dtaData"/>
            </StackPanel>
        </StackPanel>

        <ListView x:ConnectionId='2' x:Name="lsvAtraccions" Grid.Column="1"/>
        <StackPanel Grid.Column="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:ConnectionId='4' x:Name="btnAfegirClient" Content="Afegir" HorizontalAlignment="Center"                              />
                <Button x:ConnectionId='5' x:Name="btnEliminarClient" Content="Eliminar" HorizontalAlignment="Center"/>
            </StackPanel>
            <controls:DataGrid x:ConnectionId='3' x:Name="dgrClients" IsReadOnly="True" HorizontalAlignment="Stretch" AutoGenerateColumns="False">
                <controls:DataGrid.Columns >
                    <controls:DataGridTextColumn
                        Header="Id" 
                        Width="Auto"
                        Binding="{Binding Id}" />
                    <controls:DataGridTextColumn
                        Header="NIF"
                        Width="Auto"
                        Binding="{Binding Nif}"/>
                    <controls:DataGridTextColumn
                        Header="Nom" 
                        Width="1*"
                        Binding="{Binding Nom}" />
                    <controls:DataGridTextColumn 
                        Header="Cognoms" 
                        Width="1*"
                        Binding="{Binding GetCognoms}"/>
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </StackPanel>

    </Grid>
</UserControl>

